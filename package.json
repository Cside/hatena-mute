{
  "version": "0.0.1",
  "scripts": {
    "dev": "yarn run clean && vite",
    "build": "yarn run clean && vite build",
    "visualize": "yarn run clean && ENABLES_VISUALIZER=true vite build && open stats.html",
    "clean": "rimraf dist out.zip",
    "test": "jest",
    "release": "yarn install && yarn run build && zip -r out.zip dist",
    "lint:eslint": "eslint './{src,test}/**/*.{ts,tsx}'",
    "lint-fix:eslint": "eslint --fix './{src,test}/**/*.{ts,tsx}'",
    "lint:prettier": "prettier --check .",
    "lint-fix:prettier": "prettier --write .",
    "lint:stylelint": "stylelint './src/**/*.pcss'",
    "lint-fix:stylelint": "stylelint --fix './src/**/*.pcss'",
    "lint": "run-p -c lint:*",
    "lint-fix": "run-p -c lint-fix:*",
    "check:types": "tsc --noEmit",
    "check:ngword": "if git grep -rE \"console\\.(log|dir)|FIXME\" -- ':!package.json'; then exit 1; else echo \"All good\"; fi",
    "check": "run-p -c test lint check:*"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "https://gitpkg.now.sh/Cside/chrome-extension-tools/packages/vite-plugin?62e01267f0e3c2681fee3e8e3bedac4e629461bd",
    "@preact/preset-vite": "^2.5.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/preact": "^3.2.3",
    "@testing-library/user-event": "^14.4.3",
    "@types/chrome": "^0.0.212",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-testing-library": "^5.9.1",
    "jest": "^29.4.2",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.4.2",
    "jest-transform-stub": "^2.0.0",
    "jsdom": "^21.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-nested": "^6.0.0",
    "prettier": "^2.8.1",
    "rimraf": "^4.1.2",
    "rollup-plugin-visualizer": "^5.9.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-csstree-validator": "^2.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
    "stylelint-no-unsupported-browser-features": "^6.0.1",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.x",
    "vite": "^4.0.4"
  },
  "dependencies": {
    "preact": "^10.12.1",
    "react-bootstrap": "^2.7.1"
  },
  "license": "MIT"
}
